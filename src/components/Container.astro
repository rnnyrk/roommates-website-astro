---
import { cn } from '@utils/cn';

type Props = {
  className?: string;
};

const { className } = Astro.props;

const classes = cn(`container ${className || ''}`);
---

<div class={classes}><slot /></div>

<style>
  .container {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    padding: 0 16px;
  }

  @media only screen and (min-width: 768px) {
    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 0;
    }
  }
</style>
