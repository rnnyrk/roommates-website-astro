---
import { Image } from 'astro:assets';

import Container from '@components/Container.astro';
import Socials from '@components/Socials.astro';

import EventsImage from '../assets/events.jpg';

type Props = {
  text: string;
  usps: string[];
};

const { text, usps } = Astro.props;
---

<Container>
  <article class="content">
    <strong>
      {text}
    </strong>

    <ul class="usp">
      {
        usps.map((usp, index) => {
          return <li>{usp}</li>;
        })
      }
    </ul>

    <Socials />
  </article>

  <figure class="images">
    <Image
      src={EventsImage}
      alt="Maak evenementen aan en deel je aanwezigheid"
      loading="eager"
    />
  </figure>
</Container>

<style>
  .content {
    flex-basis: 100%;
    padding: 40px 0 0;
    font-size: 18px;
    line-height: 24px;
    color: rgb(var(--white));
  }

  .content strong {
    font-weight: 600;
  }

  @media only screen and (min-width: 768px) {
    .content {
      flex-basis: 55%;
      padding-right: 50px;
      font-size: 22px;
      line-height: 28px;
    }
  }

  .usp {
    margin-top: 32px;
    padding-left: 16px;
    list-style: disc;
  }

  .usp li {
    margin-bottom: 16px;
  }

  .images {
    display: none;
    position: relative;
    align-items: flex-start;
    justify-content: center;
    width: 100%;
    height: 100%;
    min-height: 650px;
    max-width: 400px;
    margin: 40px auto 0;
    padding: 0 40px;
  }

  @media only screen and (min-width: 768px) {
    .images {
      display: flex;
    }
  }
</style>
